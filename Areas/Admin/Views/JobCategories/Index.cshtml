@model IEnumerable<TuyenDungFPT.Models.JobCategory>

@{
    ViewData["Title"] = "Danh mục công viêc";
}

<div class="card">
    <h5 class="card-header">@ViewData["Title"]</h5>
    <div class="card-body">
        <p><a asp-action="Create" class="btn btn-success"><i class="fa-light fa-plus"></i> Thêm mới</a></p>
            <table class="table">
                <thead>
                    <tr>
                    <th width="5%">#</th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name_khongdau)
                        </th>
                    <th width="5%">Sửa</th>
                    <th width="5%">Xóa</th>
                    </tr>
                </thead>
                <tbody>
                @{
                    var stt = 1;
                }
                @foreach (var item in Model)
                {
                <tr>
                        <td>@stt</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name_khongdau)
                        </td>
                        <td class="text-center">
                            <a asp-area="Admin" asp-action="Edit" asp-route-id="@item.Id"><i class="fa-light fa-pen-to-square"></i></a>
                        </td>
                        <td class="text-center">
                            <a asp-area ="Admin" asp-action="Delete" asp-route-id="@item.Id"><i class="fa-light fa-trash-can text-danger"></i></a>
                        </td>
                </tr>
                stt++;
                }
                </tbody>
            </table>
        </div>
</div>