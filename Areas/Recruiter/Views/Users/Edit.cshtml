@model TuyenDungFPT.Models.User

@{
    ViewData["Title"] = "Sửa người dùng";
}

<div class="card">
    <h5 class="card-header">@ViewData["Title"]</h5>
    <div class="card-body">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="CompanyId" class="control-label"></label>
                <select asp-for="CompanyId" class="form-control" asp-items="ViewBag.CompanyId"></select>
                <span asp-validation-for="CompanyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FullName_khongdau" class="control-label"></label>
                <input asp-for="FullName_khongdau" class="form-control" />
                <span asp-validation-for="FullName_khongdau" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordHash" class="control-label"></label>
                <input asp-for="PasswordHash" class="form-control" placeholder="Bỏ trống để giữ nguyên mật khẩu cũ" />
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="XacNhanMatKhau" class="control-label"></label>
                <input asp-for="XacNhanMatKhau" class="form-control" placeholder="Bỏ trống để giữ nguyên mật khẩu cũ" />
                <span asp-validation-for="XacNhanMatKhau" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="mb-3">
                @if (!string.IsNullOrEmpty(Model.Avata))
                {
                    <span class="d-block mb-2"><img src="~/uploads/@Model.Avata" width="80" class="img-thumbnail" /></span>
                    <span class="d-block mb-2 mt-2 small text-danger">Bỏ trống nếu không muốn cập nhật ảnh mới!</span>
                }
                <label asp-for="DataAvata" class="control-label"></label>
                <input asp-for="DataAvata" accept="image/jpeg,image/gif,image/png" class="form-control" />
                <span asp-validation-for="DataAvata" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Loại công việc:</label>
                <select asp-for="Role" asp-items="Html.GetEnumSelectList<UserRole>()" class="form-control">
                    <option value="">-- Chọn quyền--</option>
                </select>
            </div>
            <div class="mb-0">
                <button type="submit" class="btn btn-primary"><i class="fa-light fa-floppy-disk"></i> Cập nhật</button> hoặc <a asp-action="Index">Quay về danh sách</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
